{# custom Sliding pagination control implementation #}

{% if pageCount > 1 %}
    <nav aria-label="">
        <ul class="pagination">
            {% if first is defined and current != first %}
                <li class="page-item first">
                    <a class="page-link" href="{{ path(route, query|merge({(pageParameterName): first})) }}">First</a>
                </li>
            {% endif %}

            {% if previous is defined %}
                <li class="page-item previous">
                    <a class="page-link" href="{{ path(route, query|merge({(pageParameterName): previous})) }}">&lt;</a>
                </li>
            {% endif %}

            {% for page in pagesInRange %}
                {% if page != current %}
                    <li class="page-item">
                        <a class="page-link" href="{{ path(route, query|merge({(pageParameterName): page})) }}">{{ page }}</a>
                    </li>
                {% else %}
                    <li class="page-item current">
                        <a class="page-link" href="javascript: void(0)">{{ page }}</a>
                    </li>
                {% endif %}

            {% endfor %}

            {% if next is defined and current != first %}
                <li class="page-item next">
                    <a class="page-link" href="{{ path(route, query|merge({(pageParameterName): next})) }}">&gt;</a>
                </li>
            {% endif %}

            {% if last is defined and current != last %}
                <li class="page-item last">
                    <a class="page-link" href="{{ path(route, query|merge({(pageParameterName): last})) }}">Last</a>
                </li>
            {% endif %}
        </ul>
    </nav>
{% endif %}
